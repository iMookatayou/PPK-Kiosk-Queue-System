generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model DataQueue {
  id            Int      @id @default(autoincrement())
  date          DateTime @unique // วันที่ (1 วัน 1 record)
  lastQueue     Int // คิวล่าสุดของวัน
  previousQueue Int // คิวที่เก็บหลังรีเซ็ท (ถ้ามี)
  source        String   @default("manual") // manual | auto
  location      String?
  createdAt     DateTime @default(now()) // เวลา insert
  updatedAt     DateTime @updatedAt // เวลาอัปเดตล่าสุด
}
